#!/bin/sh
# postinst script for umbrella-skel
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        skelhome=/var/lib/umbrella-skel

        if ! getent passwd "${TFTP_USERNAME}" > /dev/null 2>&1
        then
            adduser --system --home ${skelhome} --no-create-home -gecos "Umbrella skel updater" --quiet umbrella-skel
        else
            echo "umbrella-skel user already exists, not creating."
        fi

        # create the directory to hold skel
        mkdir -p ${skelhome}

        # copy the initial skel
        cp /usr/share/umbrella-skel/skel.tar.gz ${skelhome}
        touch -d "18 June 1973" ${skelhome}/skel.tar.gz

        # set the ower
        chown -R umbrella-skel:nogroup ${skelhome}

        # run the cronjob to perform the initial update
        /etc/cron.hourly/umbrella-skel
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
