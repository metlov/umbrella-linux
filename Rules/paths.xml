</Group>
<Group name='virt-lxc'>
   <Path type='nonexistent' name='/etc/update-motd.d/51-cloudguest'/>
</Group>
<Path type='symlink' name='/etc/apache2/mods-enabled/socache_shmcb.load' to='../mods-available/socache_shmcb.load'/>
